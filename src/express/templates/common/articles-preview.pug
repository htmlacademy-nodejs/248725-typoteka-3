h2.visually-hidden Список превью статей
ul.preview__list
  each article in articles
    li(class={
      'preview__item': true,
      'preview__item--noimage': !article.imgInfo,
    })
      ul.preview__breadcrumbs
        each category in article.categories
          li.preview__breadcrumbs-item
            a.preview__breadcrumbs-link(href="#")= category
      if article.imgInfo
        div.preview__background
          img.preview__background-image(
            src=`img/${article.imgInfo.name}@1x.jpg`
            width="460"
            height="240"
            srcset=`/img/${article.imgInfo.name}@1x.jpg 1x, img/${article.imgInfo.name}@2x.jpg 2x`
            alt=article.imgInfo.alt
          )
      time.preview__time(datetime=article.datetime.value)= article.datetime.readableValue
      h3.preview__name
        a.preview__name-link(href="#")= article.title
      p.preview__text= article.announce
      a.preview__comment(href="#")= `Комментарии `
        span.preview__cloud
        b.preview__comment-count= ` ` + article.commentNumber
